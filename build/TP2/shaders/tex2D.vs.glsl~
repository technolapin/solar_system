#version 300 es


layout(location = 0) in vec2 aVertexPos;
layout(location = 1) in vec2 aVertexUV;

out vec2 vUV;

uniform float uTime;


mat3 rotate(float angle)
{
   return mat3(cos(angle) , sin(angle), 0.,
               -sin(angle), cos(angle), 0.,
               0.         , 0.        , 1. );
}



void main() {
   vUV = aVertexUV;

   mat3 rot = rotate(uTime);   
   
   gl_Position = vec4(rot*vec3(aVertexPos, 1.), 1);
};
